<Page
    x:Class="AmdDriverTool.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:AmdDriverTool"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Loaded="page_Loaded"
    RequestedTheme="Dark"
    Background="{ThemeResource ApplicationBlackColor}">

    <Grid>
        <Grid x:Name="grid_Main">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Menu -->
            <ListBox x:Name="listbox_Main" Grid.Column="0" SelectionMode="Single" SelectionChanged="listbox_Main_SelectionChanged" Style="{ThemeResource ApplicationListBox}">
                <ListBoxItem x:Name="listboxitem_Tuning">
                    <StackPanel>
                        <Image HorizontalAlignment="Center" Source="/Assets/Tuning.png" Width="50" Height="50"/>
                        <TextBlock HorizontalAlignment="Center" Text="Tuning"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem x:Name="listboxitem_Fans" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel>
                        <Image HorizontalAlignment="Center" Source="/Assets/Fans.png" Width="50" Height="50"/>
                        <TextBlock HorizontalAlignment="Center" Text="Fans"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem x:Name="listboxitem_Graphics" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel>
                        <Image HorizontalAlignment="Center" Source="/Assets/Graphics.png" Width="50" Height="50"/>
                        <TextBlock HorizontalAlignment="Center" Text="Graphics"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem x:Name="listboxitem_Display" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel>
                        <Image HorizontalAlignment="Center" Source="/Assets/Display.png" Width="50" Height="50"/>
                        <TextBlock HorizontalAlignment="Center" Text="Display"/>
                    </StackPanel>
                </ListBoxItem>
                <ListBoxItem x:Name="listboxitem_Info" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                    <StackPanel>
                        <Image HorizontalAlignment="Center" Source="/Assets/Information.png" Width="50" Height="50"/>
                        <TextBlock HorizontalAlignment="Center" Text="Information"/>
                    </StackPanel>
                </ListBoxItem>
            </ListBox>

            <!-- Content -->
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Border Grid.Row="0" CornerRadius="8" Margin="5" Padding="8" Background="{ThemeResource ApplicationDarkGrayColor}">
                    <Grid>
                        <!-- Status text -->
                        <TextBlock x:Name="textblock_Status" Text="AMD Driver Tool" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Right"/>

                        <StackPanel Orientation="Horizontal">
                            <!-- Gpu Select -->
                            <ComboBox x:Name="combobox_GpuSelect" SelectedIndex="0" IsEnabled="False" Style="{ThemeResource ApplicationComboBox}"/>

                            <!-- Display Select -->
                            <ComboBox x:Name="combobox_DisplaySelect" SelectedIndex="0" IsEnabled="False" Margin="10,0,0,0" Style="{ThemeResource ApplicationComboBox}"/>

                            <!-- Application Select -->
                            <ComboBox x:Name="combobox_AppSelect" SelectedIndex="0" IsEnabled="False" Margin="10,0,0,0" Style="{ThemeResource ApplicationComboBox}"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Status -->
                <Border Grid.Row="1" CornerRadius="8" Margin="5" Padding="8" Background="{ThemeResource ApplicationDarkGrayColor}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock x:Name="textblock_Current_Gpu_Usage" Text="..." Margin="0,0,10,0" FontSize="18"/>
                        <TextBlock x:Name="textblock_Current_Core_Speed" Margin="0,0,10,0" FontSize="18"/>
                        <TextBlock x:Name="textblock_Current_Memory_Speed" Margin="0,0,10,0" FontSize="18"/>
                        <TextBlock x:Name="textblock_Current_Power_Watt" Margin="0,0,10,0" FontSize="18"/>
                        <TextBlock x:Name="textblock_Current_Power_Voltage" Margin="0,0,10,0" FontSize="18"/>
                        <TextBlock x:Name="textblock_Current_Fan_Speed" Margin="0,0,10,0" FontSize="18"/>
                        <TextBlock x:Name="textblock_Current_Temp_Core" Margin="0,0,10,0" FontSize="18"/>
                        <TextBlock x:Name="textblock_Current_Temp_Hotspot" Margin="0,0,10,0" FontSize="18"/>
                        <TextBlock x:Name="textblock_Current_Temp_Intake" Margin="0,0,10,0" FontSize="18"/>
                    </StackPanel>
                </Border>

                <!-- Main -->
                <ScrollViewer Grid.Row="2" Margin="5,0,5,0" VerticalScrollBarVisibility="Auto">
                    <Grid Margin="0,0,10,10">
                        <!-- Graphics -->
                        <StackPanel x:Name="stackpanel_Graphics" Visibility="Collapsed">
                            <TextBlock Text="Graphics Options" FontSize="20" FontWeight="Medium"/>

                            <!-- Radeon Super Resolution -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Radeon Super Resolution is an upscaling feature for faster frame rates on any game that runs exclusively in full-screen mode.&#10;&#10;This feature is inactive until the in-game resolution is set lower than the monitor's native resolution. Radeon Super Resolution automatically detects the resolution change, upscales to the native monitor resolution and delivers extra performance."/>
                                        <ToggleSwitch x:Name="toggleswitch_RadeonSuperResolution" Margin="10,0,0,0" OffContent="Radeon Super Resolution" OnContent="Radeon Super Resolution" Toggled="toggleswitch_RadeonSuperResolution_Toggled"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Sharpening" VerticalAlignment="Center"/>
                                        <TextBox x:Name="textbox_RadeonSuperResolution_Sharpening" Margin="5,0,0,0" Text="{Binding ElementName=slider_RadeonSuperResolution_Sharpening, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <Slider x:Name="slider_RadeonSuperResolution_Sharpening" Width="150" Margin="10,0,10,0" ValueChanged="slider_RadeonSuperResolution_Sharpening_ValueChanged"/>
                                        <TextBlock Text="%" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Radeon Fluid Motion Frames -->
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Fluid Motion Frames is a frame generation feature to boost the displayed frames for supported games."/>
                                <ToggleSwitch x:Name="toggleswitch_RadeonFluidMotionFrames" Margin="10,0,0,0" OffContent="Radeon Fluid Motion Frames" OnContent="Radeon Fluid Motion Frames" Toggled="toggleswitch_RadeonFluidMotionFrames_Toggled"/>
                            </StackPanel>

                            <!-- Radeon Anti-Lag -->
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Radeon Anti-Lag helps reduce input lag in GPU-limited cases by controlling the pace of the CPU work to ensure it doesn't get too far ahead of the GPU."/>
                                <ToggleSwitch x:Name="toggleswitch_RadeonAntiLag" Margin="10,0,0,0" OffContent="Radeon Anti-Lag" OnContent="Radeon Anti-Lag" Toggled="toggleswitch_RadeonAntiLag_Toggled"/>
                            </StackPanel>

                            <!-- Radeon Boost -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Radeon Boost dynamically reduces resolution during motion to improve performance with little perceptible impact on image quality."/>
                                        <ToggleSwitch x:Name="toggleswitch_RadeonBoost" Margin="10,0,0,0" OffContent="Radeon Boost" OnContent="Radeon Boost" Toggled="toggleswitch_RadeonBoost_Toggled"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Min. Resolution" VerticalAlignment="Center"/>
                                        <TextBox x:Name="textbox_RadeonBoost_MinRes" Margin="5,0,0,0" Text="{Binding ElementName=slider_RadeonBoost_MinRes, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <Slider x:Name="slider_RadeonBoost_MinRes" Width="150" Margin="10,0,10,0" ValueChanged="slider_RadeonBoost_MinRes_ValueChanged"/>
                                        <TextBlock Text="%" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Radeon Chill -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Radeon Chill conserves GPU power and reduces heat by adjusting the FPS based on the intensity of in-game movement."/>
                                        <ToggleSwitch x:Name="toggleswitch_RadeonChill" Margin="10,0,0,0" OffContent="Radeon Chill" OnContent="Radeon Chill" Toggled="toggleswitch_RadeonChill_Toggled"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Min" VerticalAlignment="Center"/>
                                        <TextBox x:Name="textbox_RadeonChill_Min" Margin="5,0,0,0" Text="{Binding ElementName=slider_RadeonChill_Min, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <Slider x:Name="slider_RadeonChill_Min" Width="150" Margin="10,0,10,0" ValueChanged="slider_RadeonChill_Min_ValueChanged"/>
                                        <TextBlock Text="Max" VerticalAlignment="Center"/>
                                        <TextBox x:Name="textbox_RadeonChill_Max" Margin="5,0,0,0" Text="{Binding ElementName=slider_RadeonChill_Max, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <Slider x:Name="slider_RadeonChill_Max" Width="150" Margin="10,0,10,0" ValueChanged="slider_RadeonChill_Max_ValueChanged"/>
                                        <TextBlock Text="FPS" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Radeon Image Sharpening -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Radeon Image Sharpening restores clarity softened by other effects to in-game visuals, and select productivity and media applications."/>
                                        <ToggleSwitch x:Name="toggleswitch_RadeonImageSharpening" Margin="10,0,0,0" OffContent="Radeon Image Sharpening" OnContent="Radeon Image Sharpening" Toggled="toggleswitch_RadeonImageSharpening_Toggled"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Sharpening" VerticalAlignment="Center"/>
                                        <TextBox x:Name="textbox_RadeonImageSharpening_Sharpening" Margin="5,0,0,0" Text="{Binding ElementName=slider_RadeonImageSharpening_Sharpening, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <Slider x:Name="slider_RadeonImageSharpening_Sharpening" Width="150" Margin="10,0,10,0" ValueChanged="slider_RadeonImageSharpening_Sharpening_ValueChanged"/>
                                        <TextBlock Text="%" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Radeon Sharpen Desktop -->
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal" Visibility="Collapsed">
                                <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="When AMD Radeon Image sharpening is enabled and Sharpen Desktop is enabled, the sharpening is applied for both windowed applications and for applications that run in fullscreen exclusive mode.&#10;&#10;When AMD Radeon Image sharpening is enabled and Sharpen Desktop is disabled, the sharpening is only applied to applications that run in fullscreen exclusive mode.&#10;&#10;When AMD Radeon™ Image sharpening is disabled and Sharpen Desktop is enabled, Sharpen Desktop remains in enabled state, but the value is ignored."/>
                                <ToggleSwitch x:Name="toggleswitch_RadeonSharpenDesktop" Margin="10,0,0,0" OffContent="Radeon Sharpen Desktop" OnContent="Radeon Sharpen Desktop" Toggled="toggleswitch_RadeonSharpenDesktop_Toggled"/>
                            </StackPanel>

                            <!-- Radeon Enhanced Sync -->
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Radeon Enhanced Sync synchronizes the transition to a new frame of animation with the display refresh rate at a low latency, so no tearing is visible between frames.&#10;&#10;Does not limit the frame rate at the display’s refresh rate."/>
                                <ToggleSwitch x:Name="toggleswitch_RadeonEnhancedSync" Margin="10,0,0,0" OffContent="Radeon Enhanced Sync" OnContent="Radeon Enhanced Sync" Toggled="toggleswitch_RadeonEnhancedSync_Toggled"/>
                            </StackPanel>

                            <!-- Vertical Refresh -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="VSync synchronizes the transition to a new frame of animation with the display update so no tearing is visible between frames.&#10;&#10;Limits the frame rate at the display’s refresh rate."/>
                                        <TextBlock Margin="10,0,0,0" Text="Wait for Vertical Refresh" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <ComboBox x:Name="combobox_VerticalRefresh" Margin="0,5,0,0" Width="260" SelectionChanged="combobox_VerticalRefresh_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>
                                </StackPanel>
                            </Border>

                            <!-- Frame Rate Target Control -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Frame Rate Target Control sets a user-defined target maximum frame rate in full-screen applications to reduce GPU power consumption."/>
                                        <ToggleSwitch x:Name="toggleswitch_Frtc" Margin="10,0,0,0" OffContent="Frame Rate Target Control" OnContent="Frame Rate Target Control" Toggled="toggleswitch_Frtc_Toggled"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="Maximum" VerticalAlignment="Center"/>
                                        <TextBox x:Name="textbox_Frtc_Max" Margin="5,0,0,0" Text="{Binding ElementName=slider_Frtc_Max, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <Slider x:Name="slider_Frtc_Max" Width="150" Margin="10,0,10,0" ValueChanged="slider_Frtc_Max_ValueChanged"/>
                                        <TextBlock Text="FPS" VerticalAlignment="Center"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Anti-Aliasing Mode -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Anti-aliasing improves image quality by smoothing jagged edges at the cost of some performance."/>
                                        <TextBlock Text="Anti-Aliasing Mode" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <ComboBox x:Name="combobox_AntiAliasingMode" Margin="0,5,0,0" Width="260" SelectionChanged="combobox_AntiAliasingMode_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>
                                </StackPanel>
                            </Border>

                            <!-- Anti-Aliasing Method -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Anti-aliasing improves image quality by smoothing jagged edges at the cost of some performance."/>
                                        <TextBlock Text="Anti-Aliasing Method" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <ComboBox x:Name="combobox_AntiAliasingMethod" Margin="0,5,0,0" Width="260" SelectionChanged="combobox_AntiAliasingMethod_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>
                                </StackPanel>
                            </Border>

                            <!-- Anti-Aliasing Level -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Anti-aliasing improves image quality by smoothing jagged edges at the cost of some performance."/>
                                        <TextBlock Text="Anti-Aliasing Level" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <ComboBox x:Name="combobox_AntiAliasingLevel" Margin="0,5,0,0" Width="260" SelectionChanged="combobox_AntiAliasingLevel_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>
                                </StackPanel>
                            </Border>

                            <!-- Morphologic Anti-Aliasing -->
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Morphological Anti-Aliasing (MLAA) is an edge-smoothing technique with minimal performance overhead."/>
                                <ToggleSwitch x:Name="toggleswitch_MorphologicAntiAliasing" Margin="10,0,0,0" OffContent="Morphologic Anti-Aliasing" OnContent="Morphologic Anti-Aliasing" Toggled="toggleswitch_MorphologicAntiAliasing_Toggled"/>
                            </StackPanel>

                            <!-- Anisotropic Texture Filtering -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Anisotropic filtering improves texture quality in most 3D applications on surfaces that appear far away or at odd angles – such as roads or trees – at the cost of some frame rate performance.&#10;&#10;Only affects DirectX® 9 applications."/>
                                        <ToggleSwitch x:Name="toggleswitch_AnisotropicTextureFiltering" Margin="10,0,0,0" OffContent="Force Anisotropic Texture Filtering" OnContent="Force Anisotropic Texture Filtering" Toggled="toggleswitch_AnisotropicTextureFiltering_Toggled"/>
                                    </StackPanel>
                                    <ComboBox x:Name="combobox_AnisotropicTextureFilteringQuality" Margin="0,5,0,0" Width="260" SelectionChanged="combobox_AnisotropicTextureFilteringQuality_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>
                                </StackPanel>
                            </Border>

                            <!-- Tessellation Mode -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Tessellation adjusts the number of polygons used to render objects with enhanced detail, at the cost of some frame rate performance."/>
                                        <TextBlock Text="Tessellation Mode" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <ComboBox x:Name="combobox_Tessellation_Mode" Margin="0,5,0,0" Width="260" SelectionChanged="combobox_Tessellation_Mode_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>
                                </StackPanel>
                            </Border>

                            <!-- Tessellation Level -->
                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Tessellation adjusts the number of polygons used to render objects with enhanced detail, at the cost of some frame rate performance."/>
                                        <TextBlock Text="Tessellation Level" Margin="10,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <ComboBox x:Name="combobox_Tessellation_Level" Margin="0,5,0,0" Width="260" SelectionChanged="combobox_Tessellation_Level_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>
                                </StackPanel>
                            </Border>

                            <!-- Reset Shader Cache -->
                            <Button x:Name="button_Reset_Shader_Cache" Click="button_Reset_Shader_Cache_Click" Content="Reset Shader Cache" Margin="0,10,0,0" ToolTipService.ToolTip="Clears contents of the disk-based shader cache." Style="{ThemeResource ApplicationButton}"/>
                        </StackPanel>

                        <!-- Tuning -->
                        <StackPanel x:Name="stackpanel_Tuning" Visibility="Collapsed">
                            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                <Button x:Name="button_Apply" Click="button_Apply_Click" Content="Apply" Width="100" Style="{ThemeResource ApplicationButton}"/>
                                <Button x:Name="button_Reset" Click="button_Reset_Click" Content="Reset" Margin="5,0,0,0" Width="100" Style="{ThemeResource ApplicationButton}"/>
                                <Button x:Name="button_Import" Click="button_Import_Click" Content="Import" Margin="5,0,0,0" Width="100" Style="{ThemeResource ApplicationButton}"/>
                                <Button x:Name="button_Export" Click="button_Export_Click" Content="Export" Margin="5,0,0,0" Width="100" Style="{ThemeResource ApplicationButton}"/>
                            </StackPanel>

                            <TextBlock Text="GPU Tuning" Margin="0,5,0,0" FontSize="20" FontWeight="Medium"/>
                            <TextBlock Margin="0,10,0,0" Text="Minimum Frequency (MHz)"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" x:Name="textbox_Core_Min" Text="{Binding ElementName=slider_Core_Min, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                <Slider Grid.Column="1" x:Name="slider_Core_Min" Margin="10,0,0,0"/>
                            </Grid>

                            <TextBlock Text="Maximum Frequency (MHz)" Margin="0,10,0,0"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" x:Name="textbox_Core_Max" Text="{Binding ElementName=slider_Core_Max, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                <Slider Grid.Column="1" x:Name="slider_Core_Max" Margin="10,0,0,0"/>
                            </Grid>

                            <TextBlock Text="Memory Tuning" Margin="0,10,0,0" FontSize="20" FontWeight="Medium"/>
                            <ComboBox x:Name="combobox_Memory_Timing" Margin="0,10,0,0" Header="Memory Timing" Width="300" Style="{ThemeResource ApplicationComboBox}"/>
                            <TextBlock Text="Maximum Frequency (MHz)" Margin="0,10,0,0"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" x:Name="textbox_Memory_Max" Text="{Binding ElementName=slider_Memory_Max, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                <Slider Grid.Column="1" x:Name="slider_Memory_Max" Margin="10,0,0,0"/>
                            </Grid>

                            <TextBlock Text="Power Tuning" Margin="0,10,0,0" FontSize="20" FontWeight="Medium"/>
                            <TextBlock Margin="0,10,0,0" Text="Power Limit (%)"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" x:Name="textbox_Power_Limit" Text="{Binding ElementName=slider_Power_Limit, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                <Slider Grid.Column="1" x:Name="slider_Power_Limit" Margin="10,0,0,0"/>
                            </Grid>

                            <TextBlock Text="Voltage (mV)" Margin="0,10,0,0"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" x:Name="textbox_Power_Voltage" Text="{Binding ElementName=slider_Power_Voltage, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                <Slider Grid.Column="1" x:Name="slider_Power_Voltage" Margin="10,0,0,0"/>
                            </Grid>

                            <TextBlock Text="TDC Limit (A)" Margin="0,10,0,0"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" x:Name="textbox_Power_TDC" Text="{Binding ElementName=slider_Power_TDC, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                <Slider Grid.Column="1" x:Name="slider_Power_TDC" Margin="10,0,0,0"/>
                            </Grid>
                        </StackPanel>

                        <!-- Fans -->
                        <StackPanel x:Name="stackpanel_Fans" Visibility="Collapsed">
                            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                <Button x:Name="button_Apply_Fan" Click="button_Apply_Click" Content="Apply" Width="100" Style="{ThemeResource ApplicationButton}"/>
                                <Button x:Name="button_Reset_Fan" Click="button_Reset_Click" Content="Reset" Margin="5,0,0,0" Width="100" Style="{ThemeResource ApplicationButton}"/>
                                <Button x:Name="button_Import_Fan" Click="button_Import_Click" Content="Import" Margin="5,0,0,0" Width="100" Style="{ThemeResource ApplicationButton}"/>
                                <Button x:Name="button_Export_Fan" Click="button_Export_Click" Content="Export" Margin="5,0,0,0" Width="100" Style="{ThemeResource ApplicationButton}"/>
                            </StackPanel>

                            <Grid Margin="0,10,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Column="0" Grid.Row="0" BorderBrush="{ThemeResource ApplicationWhiteColor}" BorderThickness="2" CornerRadius="5">
                                    <Grid>
                                        <Grid Margin="6" HorizontalAlignment="Center" VerticalAlignment="Center">
                                            <Line Margin="0,25,0,0" X1="500" Stroke="{ThemeResource ApplicationDimGrayColor}" StrokeThickness="1"/>
                                            <Line Margin="0,50,0,0" X1="500" Stroke="{ThemeResource ApplicationDimGrayColor}" StrokeThickness="1"/>
                                            <Line Margin="0,75,0,0" X1="500" Stroke="{ThemeResource ApplicationDimGrayColor}" StrokeThickness="1"/>
                                            <Line Margin="125,0,0,0" Y1="100" Stroke="{ThemeResource ApplicationDimGrayColor}" StrokeThickness="1"/>
                                            <Line Margin="250,0,0,0" Y1="100" Stroke="{ThemeResource ApplicationDimGrayColor}" StrokeThickness="1"/>
                                            <Line Margin="375,0,0,0" Y1="100" Stroke="{ThemeResource ApplicationDimGrayColor}" StrokeThickness="1"/>
                                            <Polyline x:Name="polyline_Fan_Lines" StrokeLineJoin="Round" StrokeStartLineCap="Round" StrokeDashCap="Round" Stroke="{StaticResource SystemAccentColor}" StrokeThickness="2"/>
                                        </Grid>
                                        <Grid x:Name="grid_Fan_Dots" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                                    </Grid>
                                </Border>

                                <Grid Grid.Column="1" Margin="5,0,0,0" VerticalAlignment="Stretch">
                                    <TextBlock Text="0% Fan" VerticalAlignment="Bottom"/>
                                    <TextBlock Text="50% Fan" VerticalAlignment="Center"/>
                                    <TextBlock Text="100% Fan" VerticalAlignment="Top"/>
                                </Grid>

                                <Grid Grid.Row="1" Margin="0,5,0,0" HorizontalAlignment="Stretch">
                                    <TextBlock Text="0°C" HorizontalAlignment="Left"/>
                                    <TextBlock Text="50°C" HorizontalAlignment="Center"/>
                                    <TextBlock Text="100°C" HorizontalAlignment="Right"/>
                                </Grid>
                            </Grid>

                            <ToggleSwitch x:Name="toggleswitch_Fan_Zero_Rpm" Margin="0,10,0,0" OffContent="Zero RPM fan mode" OnContent="Zero RPM fan mode"/>

                            <TextBlock Text="Fan Speed and Temperature" Margin="0,5,0,0" FontSize="20" FontWeight="Medium"/>
                            <VariableSizedWrapGrid Orientation="Horizontal" Margin="-5,5,0,0">
                                <StackPanel Width="280" Margin="5">
                                    <TextBlock Text="Fan Curve 1" FontSize="16"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Fan_Speed_0" Text="{Binding ElementName=slider_Fan_Speed_0, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <TextBlock Grid.Column="1" Width="20" Text="%" TextAlignment="Center" VerticalAlignment="Center" Margin="5,0,10,0"/>
                                        <Slider Grid.Column="2" x:Name="slider_Fan_Speed_0" ValueChanged="slider_Fan_ValueChanged"/>
                                    </Grid>
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Fan_Temp_0" Text="{Binding ElementName=slider_Fan_Temp_0, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <TextBlock Grid.Column="1" Width="20" Text="°C" TextAlignment="Center" VerticalAlignment="Center" Margin="5,0,10,0"/>
                                        <Slider Grid.Column="2" x:Name="slider_Fan_Temp_0" ValueChanged="slider_Fan_ValueChanged"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Width="280" Margin="5">
                                    <TextBlock Text="Fan Curve 2" FontSize="16"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Fan_Speed_1" Text="{Binding ElementName=slider_Fan_Speed_1, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <TextBlock Grid.Column="1" Width="20" Text="%" TextAlignment="Center" VerticalAlignment="Center" Margin="5,0,10,0"/>
                                        <Slider Grid.Column="2" x:Name="slider_Fan_Speed_1" ValueChanged="slider_Fan_ValueChanged"/>
                                    </Grid>
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Fan_Temp_1" Text="{Binding ElementName=slider_Fan_Temp_1, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <TextBlock Grid.Column="1" Width="20" Text="°C" TextAlignment="Center" VerticalAlignment="Center" Margin="5,0,10,0"/>
                                        <Slider Grid.Column="2" x:Name="slider_Fan_Temp_1" ValueChanged="slider_Fan_ValueChanged"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Width="280" Margin="5">
                                    <TextBlock Text="Fan Curve 3" FontSize="16"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Fan_Speed_2" Text="{Binding ElementName=slider_Fan_Speed_2, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <TextBlock Grid.Column="1" Width="20" Text="%" TextAlignment="Center" VerticalAlignment="Center" Margin="5,0,10,0"/>
                                        <Slider Grid.Column="2" x:Name="slider_Fan_Speed_2" ValueChanged="slider_Fan_ValueChanged"/>
                                    </Grid>
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Fan_Temp_2" Text="{Binding ElementName=slider_Fan_Temp_2, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <TextBlock Grid.Column="1" Width="20" Text="°C" TextAlignment="Center" VerticalAlignment="Center" Margin="5,0,10,0"/>
                                        <Slider Grid.Column="2" x:Name="slider_Fan_Temp_2" ValueChanged="slider_Fan_ValueChanged"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Width="280" Margin="5">
                                    <TextBlock Text="Fan Curve 4" FontSize="16"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Fan_Speed_3" Text="{Binding ElementName=slider_Fan_Speed_3, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <TextBlock Grid.Column="1" Width="20" Text="%" TextAlignment="Center" VerticalAlignment="Center" Margin="5,0,10,0"/>
                                        <Slider Grid.Column="2" x:Name="slider_Fan_Speed_3" ValueChanged="slider_Fan_ValueChanged"/>
                                    </Grid>
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Fan_Temp_3" Text="{Binding ElementName=slider_Fan_Temp_3, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <TextBlock Grid.Column="1" Width="20" Text="°C" TextAlignment="Center" VerticalAlignment="Center" Margin="5,0,10,0"/>
                                        <Slider Grid.Column="2" x:Name="slider_Fan_Temp_3" ValueChanged="slider_Fan_ValueChanged"/>
                                    </Grid>
                                </StackPanel>

                                <StackPanel Width="280" Margin="5">
                                    <TextBlock Text="Fan Curve 5" FontSize="16"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Fan_Speed_4" Text="{Binding ElementName=slider_Fan_Speed_4, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <TextBlock Grid.Column="1" Width="20" Text="%" TextAlignment="Center" VerticalAlignment="Center" Margin="5,0,10,0"/>
                                        <Slider Grid.Column="2" x:Name="slider_Fan_Speed_4" ValueChanged="slider_Fan_ValueChanged"/>
                                    </Grid>
                                    <Grid Margin="0,10,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox Grid.Column="0" x:Name="textbox_Fan_Temp_4" Text="{Binding ElementName=slider_Fan_Temp_4, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                        <TextBlock Grid.Column="1" Width="20" Text="°C" TextAlignment="Center" VerticalAlignment="Center" Margin="5,0,10,0"/>
                                        <Slider Grid.Column="2" x:Name="slider_Fan_Temp_4" ValueChanged="slider_Fan_ValueChanged"/>
                                    </Grid>
                                </StackPanel>
                            </VariableSizedWrapGrid>
                        </StackPanel>

                        <!-- Display -->
                        <StackPanel x:Name="stackpanel_Display" Visibility="Collapsed">
                            <TextBlock Text="Display Options" FontSize="20" FontWeight="Medium"/>

                            <!-- FreeSync -->
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="AMD FreeSync technology synchronizes the refresh rate of a display with the framerate of AMD FreeSync compatible graphics card to deliver dynamic refresh rate.&#10;&#10;AMD FreeSync technology reduces or eliminates visual artifacts, input latency, screen tearing and stuttering during gaming and video playback."/>
                                <ToggleSwitch x:Name="toggleswitch_FreeSync" Margin="10,0,0,0" OffContent="AMD FreeSync" OnContent="AMD FreeSync" Toggled="toggleswitch_FreeSync_Toggled"/>
                            </StackPanel>

                            <!-- Virtual Super Resolution -->
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Virtual Super Resolution allows applications to render at resolutions higher than the display's native pixel grid and then scales images down to fit the display, producing higher quality visuals at the expense of performance."/>
                                <ToggleSwitch x:Name="toggleswitch_VSR" Margin="10,0,0,0" OffContent="AMD Virtual Super Resolution" OnContent="AMD Virtual Super Resolution" Toggled="toggleswitch_VSR_Toggled"/>
                            </StackPanel>

                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <!-- GPU Scaling -->
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="GPU scaling uses the GPU to scale up lower resolutions to fit the display. When not enabled, displays typically handle scaling themselves."/>
                                        <ToggleSwitch x:Name="toggleswitch_GPUScaling" Margin="10,0,0,0" OffContent="GPU Scaling" OnContent="GPU Scaling" Toggled="toggleswitch_GPUScaling_Toggled"/>
                                    </StackPanel>

                                    <!-- Integer Scaling -->
                                    <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Integer Display Scaling gives a sharp, pixelated look to images scaled up to fit the display. Images that can't be scaled to match the display's exact size and shape will be centered on screen. Integer Display Scaling enhances visuals in old games to revive vintage gaming experiences on a modern display.&#10;&#10;Integer Display Scaling is not supported when GPU Scaling is disabled."/>
                                        <ToggleSwitch x:Name="toggleswitch_IntegerScaling" Margin="10,0,0,0" OffContent="Integer Scaling" OnContent="Integer Scaling" Toggled="toggleswitch_IntegerScaling_Toggled"/>
                                    </StackPanel>

                                    <!-- Scaling Mode -->
                                    <StackPanel Margin="0,5,0,0" Orientation="Vertical">
                                        <TextBlock Text="Scaling Mode" VerticalAlignment="Center"/>
                                        <ComboBox x:Name="combobox_Display_ScalingMode" Width="300" SelectionChanged="combobox_Display_ScalingMode_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <Border Margin="0,10,0,0" Padding="5" CornerRadius="8" Background="{ThemeResource ApplicationVoidGrayColor}">
                                <StackPanel>
                                    <!-- Vari-Bright -->
                                    <StackPanel Orientation="Horizontal">
                                        <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="Vari-Bright saves power by adaptively adjusting the display brightness based on image content."/>
                                        <ToggleSwitch x:Name="toggleswitch_VariBright" Margin="10,0,0,0" OffContent="Vari-Bright" OnContent="Vari-Bright" Toggled="toggleswitch_VariBright_Toggled"/>
                                    </StackPanel>

                                    <!-- Vari-Bright Level -->
                                    <StackPanel Margin="0,5,0,0" Orientation="Vertical">
                                        <TextBlock Text="Vari-Bright Level" VerticalAlignment="Center"/>
                                        <ComboBox x:Name="combobox_Display_VariBright_Level" Width="300" SelectionChanged="combobox_Display_VariBright_Level_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- Color Depth -->
                            <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                                <TextBlock Text="Color Depth" VerticalAlignment="Center"/>
                                <ComboBox x:Name="combobox_Display_ColorDepth" Width="300" SelectionChanged="combobox_Display_ColorDepth_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>
                            </StackPanel>

                            <!-- Pixel Format -->
                            <StackPanel Margin="0,10,0,0" Orientation="Vertical">
                                <TextBlock Text="Pixel Format" VerticalAlignment="Center"/>
                                <ComboBox x:Name="combobox_Display_PixelFormat" Width="300" SelectionChanged="combobox_Display_PixelFormat_SelectionChanged" Style="{ThemeResource ApplicationComboBox}"/>
                            </StackPanel>

                            <TextBlock Text="Custom Color" Margin="0,10,0,0" FontSize="20" FontWeight="Medium"/>

                            <!-- Color Temperature -->
                            <TextBlock Text="Color Temperature" Margin="0,10,0,0"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" x:Name="textbox_Display_ColorTemperature" Text="{Binding ElementName=slider_Display_ColorTemperature, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                <Slider Grid.Column="1" x:Name="slider_Display_ColorTemperature" Margin="10,0,0,0" ValueChanged="slider_Display_ColorTemperature_ValueChanged"/>
                            </Grid>

                            <!-- Brightness -->
                            <TextBlock Text="Brightness" Margin="0,10,0,0"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" x:Name="textbox_Display_Brightness" Text="{Binding ElementName=slider_Display_Brightness, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                <Slider Grid.Column="1" x:Name="slider_Display_Brightness" Margin="10,0,0,0" ValueChanged="slider_Display_Brightness_ValueChanged"/>
                            </Grid>

                            <!-- Contrast -->
                            <TextBlock Text="Contrast" Margin="0,10,0,0"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" x:Name="textbox_Display_Contrast" Text="{Binding ElementName=slider_Display_Contrast, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                <Slider Grid.Column="1" x:Name="slider_Display_Contrast" Margin="10,0,0,0" ValueChanged="slider_Display_Contrast_ValueChanged"/>
                            </Grid>

                            <!-- Saturation -->
                            <TextBlock Text="Saturation" Margin="0,10,0,0"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" x:Name="textbox_Display_Saturation" Text="{Binding ElementName=slider_Display_Saturation, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                <Slider Grid.Column="1" x:Name="slider_Display_Saturation" Margin="10,0,0,0" ValueChanged="slider_Display_Saturation_ValueChanged"/>
                            </Grid>

                            <!-- Hue -->
                            <TextBlock Text="Hue" Margin="0,10,0,0"/>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="0" x:Name="textbox_Display_Hue" Text="{Binding ElementName=slider_Display_Hue, Path=Value}" Style="{ThemeResource ApplicationTextBoxReadOnly}"/>
                                <Slider Grid.Column="1" x:Name="slider_Display_Hue" Margin="10,0,0,0" ValueChanged="slider_Display_Hue_ValueChanged"/>
                            </Grid>

                            <TextBlock Text="Overrides" Margin="0,10,0,0" FontSize="20" FontWeight="Medium"/>

                            <!-- HDCP Support -->
                            <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                                <Image Source="/Assets/Information.png" Width="24" Height="24" ToolTipService.ToolTip="If High-bandwidth Digital Content Protection (HDCP) is disabled on this display, digitally protected content may be unplayable, or played at a lower resolution."/>
                                <ToggleSwitch x:Name="toggleswitch_HDCPSupport" Margin="10,0,0,0" OffContent="HDCP Support" OnContent="HDCP Support" Toggled="toggleswitch_HDCPSupport_Toggled"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Info -->
                        <StackPanel x:Name="stackpanel_Info" Visibility="Collapsed">
                            <TextBlock x:Name="textblock_DeviceInfo">Loading...</TextBlock>
                        </StackPanel>
                    </Grid>
                </ScrollViewer>
            </Grid>
        </Grid>

        <!-- Overlay -->
        <Grid x:Name="grid_Overlay" Visibility="Collapsed">
            <Grid.Background>
                <SolidColorBrush Color="{ThemeResource ApplicationBlackColor}" Opacity="0.90"/>
            </Grid.Background>
            <StackPanel Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock x:Name="textblock_Overlay_Text" Text="..." TextWrapping="Wrap" FontSize="40" TextAlignment="Center" Foreground="{ThemeResource ApplicationWhiteColor}"/>
                <TextBlock x:Name="textblock_Overlay_Sub_Text" Margin="0,10,0,0" TextWrapping="Wrap" FontSize="24" TextAlignment="Center" Foreground="{ThemeResource ApplicationDimGrayColor}"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>